# Production Environment Variables for Spektif Agency
# ================================================

# Database (DigitalOcean Managed PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/spektif_agency?sslmode=require"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-production-256-bits"
JWT_EXPIRES_IN="7d"

# CORS Configuration
CORS_ORIGIN="https://your-domain.com"

# Node Environment
NODE_ENV="production"
PORT=3001

# File Upload (Cloudflare R2)
CLOUDFLARE_R2_ACCOUNT_ID="your-account-id"
CLOUDFLARE_R2_ACCESS_KEY_ID="your-access-key"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-secret-key"
CLOUDFLARE_R2_BUCKET_NAME="spektif-agency-files"

# Email Configuration (Optional - for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Monitoring (Sentry)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=100        # 100 requests per window

# Session Configuration
SESSION_SECRET="your-super-secure-session-secret-production"

# Frontend Environment Variables
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-nextauth-secret-256-bits"
NEXT_PUBLIC_API_URL="https://api.your-domain.com"
GOOGLE_CLIENT_ID="your-google-oauth-client-id"
GOOGLE_CLIENT_SECRET="your-google-oauth-client-secret"
